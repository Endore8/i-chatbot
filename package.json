{
  "name": "i-chatbot",
  "description": "Chatbot component for React.",
  "version": "0.2.8",
  "main": "./lib/index.js",
  "module": "./es/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Endore8/i-chatbot"
  },
  "author": "Oleh Stasula <endore8@gmail.com> (http://github.com/endore8)",
  "license": "MIT",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "npm run less && nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo && rm src/styles.css",
    "less": "lessc src/styles.less src/styles.css",
    "prepublish": "npm run build -- --copy-files",
    "start": "npm run less && nwb serve-react-demo",
    "test": "npm run less && nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server"
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-bootstrap": "^0.31.0",
    "react-dom": "^15.5.4",
    "react-scroll": "^1.5.2"
  },
  "peerDependencies": {
    "react": "15.x"
  },
  "devDependencies": {
    "less": "^2.7.2",
    "nwb": "0.16.x",
    "pre-commit": "^1.2.2"
  },
  "keywords": [
    "react-component"
  ]
}
